{
  "manifest_version": 3,
  "name": "A.O.A.I Browser Guardian",
  "version": "1.0.0",
  "description": "Blocks unauthorized camera/microphone access and logs consent decisions.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
